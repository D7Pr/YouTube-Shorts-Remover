/*
Project: YouTube Shorts Remover (v2.0.0)
Features:
- Extensive removal patterns (feed, sidebar, related, tab, banners)
- Custom selectors editable in Options
- Flexible config for easy updates
- Modern, responsive UI
- Structured logging with in-app log viewer & download
- MV3 manifest, modular code
*/

// ---------------------------
// manifest.json
// ---------------------------
{
  "manifest_version": 3,
  "name": "YouTube Shorts Remover",
  "version": "2.0.0",
  "description": "Hide YouTube Shorts everywhere with advanced customization.",
  "author": "Your Name",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}